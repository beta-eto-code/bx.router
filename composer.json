{
    "name": "beta/bx.router",
    "description": "Routing for Bitrix app",
    "type": "bitrix-module",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Nesterov",
            "email": "alex19pov31@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "psr/http-message": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "beta/bx.jwt": "^1.0",
        "beta/bitrix-psr7": "^1.0",
        "beta/bitrix-psr17": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^5.4"
    },
    "autoload-dev": {
        "classmap": ["lib/", "tests/Stubs", "tests/Utils", "vendor"],
        "psr-4": {
            "Bx\\Router\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "phpcs --standard=PSR12 ./lib/",
        "test": "phpunit",
        "analyze": "psalm --show-info=true --no-cache"
    }
}
